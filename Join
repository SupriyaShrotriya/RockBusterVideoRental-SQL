## Query to find the top 10 countries for Rockbuster in terms of customer numbers.

SELECT D.country AS top_10_countries,
	   COUNT (A.customer_id) as number_of_customers
FROM customer A
INNER JOIN address B ON A.address_id = B.address_id
INNER JOIN city C ON B.city_id = C.city_id
INNER JOIN country D ON C.country_id = D.country_id
GROUP BY D.country
ORDER BY COUNT(A.customer_id) DESC
LIMIT 10;

## Query to identify the top 10 cities that fall within the top 10 countries

SELECT C.city,
	   D.country AS top_10_countries,
       COUNT (A.customer_id)as number_of_customers
FROM customer A
INNER JOIN address B ON A.address_id = B.address_id
INNER JOIN city C ON B.city_id = C.city_id
INNER JOIN country D ON C.country_id = D.country_id
WHERE D.country IN (SELECT D.country
                     FROM customer A
                     INNER JOIN address B ON A.address_id = B.address_id
                     INNER JOIN city C ON B.city_id = C.city_id
                    INNER JOIN country D ON C.country_id =D.country_id
                    GROUP BY D. country
                    ORDER BY COUNT(A.customer_id) DESC
                    LIMIT 10)
GROUP BY D.country, C.city
ORDER BY COUNT(A.customer_id) DESC
LIMIT 10;

## Query to find the top 5 customers from the top 10 cities whoâ€™ve paid the highest total amounts to Rockbuster.

SELECT A.customer_id,
	   A.first_name,
	   A.last_name,
	   D.country,
	   C.city,
	   SUM(E.amount) AS total_amount_paid
FROM customer A
INNER JOIN address B ON A.address_id = B.address_id
INNER JOIN city C ON B.city_id = C.city_id
INNER JOIN country D ON C.country_id = D.country_id
INNER JOIN payment E ON A.customer_id = E.customer_id
WHERE (C.city,D.country) IN(
			        SELECT C.city,D.country
			         FROM customer A
			         INNER JOIN address B ON A.address_id = B.address_id
		             INNER JOIN city C ON B.city_id = C.city_id
			         INNER JOIN country D on C.country_id = D.country_id
			         WHERE D.country IN (
						  					SELECT D.country
						 					FROM customer A
											INNER JOIN address B ON A.address_id = B.address_id
											INNER JOIN city C ON B.city_id = C.city_id
											INNER JOIN country D on C.country_id = D.country_id
											GROUP BY country
											ORDER BY COUNT (customer_id) DESC
											LIMIT 10)
			     	 GROUP BY D.country, C.city
			      	 ORDER BY COUNT (customer_id) DESC
			       	 LIMIT 10)
GROUP BY A.customer_id,A.first_name,A.last_name,D.country,C.city
ORDER BY SUM(E.amount) DESC
LIMIT 5

